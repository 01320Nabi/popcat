<Window x:Class="PopCat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PopCat"
        mc:Ignorable="d"
        Title="Pop Cat" Height="500" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="Black">
    <Grid>
        <Image x:Name="image" Stretch="Fill" RenderTransformOrigin="0.5,0.5"></Image>
        <Image x:Name="spinner" Width="64" RenderTransformOrigin="0.5,0.5" Height="64" VerticalAlignment="Top" Margin="0,25,0,0" Visibility="Hidden"/>
    </Grid>
</Window>
